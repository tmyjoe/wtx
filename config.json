{
  "mainBranch": "develop",
  "defaultBaseBranch": "develop",
  "worktreesDir": ".wt",
  "copyFiles": [
    {
      "from": "apps/web/.env.local",
      "to": "apps/web/.env.local"
    },
    {
      "from": "apps/web/.env",
      "to": "apps/web/.env"
    },
    {
      "from": "apps/python/.env",
      "to": "apps/python/.env"
    }
  ],
  "postCreateHooks": [
    {
      "name": "Install frontend dependencies",
      "cwd": "apps/web",
      "command": [
        "pnpm",
        "install"
      ],
      "skipIfMissing": true
    },
    {
      "name": "Install backend dependencies",
      "cwd": "apps/python",
      "command": [
        "make",
        "install"
      ],
      "skipIfMissing": true
    }
  ],
  "llm": {
    "default": "codex",
    "allowed": [
      "codex",
      "claude"
    ],
    "branchNamePromptTemplate": "次の作業内容から適切なgitブランチ名を1つだけ出して。英語・kebab-caseで。説明不要。: {task}",
    "commands": {
      "codex": {
        "branchNameArgsTemplate": [
          "e",
          "{prompt}"
        ],
        "taskRunArgsTemplate": [
          "{task}"
        ]
      },
      "claude": {
        "branchNameArgsTemplate": [
          "{prompt}"
        ],
        "taskRunArgsTemplate": [
          "{task}"
        ]
      }
    }
  }
}
